
@{
    ViewBag.Title = "Product Index";
}

<br />
<br />
<br />

<div class="loading">
    <img src="~/img/loading.gif" width="100" height="100" class="img-circle" />
</div>
<div class="container blur">
    <div class="row">
        <div class="col-md-12">
            <form class="form-horizontal" id="frmAdd">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="txtProductName" class="col-sm-4 control-label">Product Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="txtProductName" placeholder="ProductName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="cmbCategory" class="col-sm-4 control-label">CategoryName</label>
                        <div class="col-sm-8">
                            <select id="cmbCategory" class="form-control">
                                <option value="1">a</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="txtUnitPrice" class="col-sm-4 control-label">Unit Price</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" min="0" max="9999" step=".01" id="txtUnitPrice" placeholder="Unit Price" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtQuantityPerUnit" class="col-sm-4 control-label">Quantity Per Unit</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="txtQuantityPerUnit" placeholder="Quantity Per Unit" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="cbDiscontinued" />
                                    Discontinued
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-6">
                            <button type="submit" class="btn btn-info btn-block">Add Product</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 col-xs-12">
            <input type="search" id="txtSearch" class="form-control" />
        </div>
    </div>
    <br />
    <div class="row" id=" resultdiv">
        <div class="col-md-12">
            <table class="table table-responsive table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Product Name</th>
                        <th>Category Name</th>
                        <th>Unit Price</th>
                        <th>Quantity Per Unit</th>
                        <th>Added Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="resultbody"></tbody>
            </table>
        </div>
    </div>
</div>


