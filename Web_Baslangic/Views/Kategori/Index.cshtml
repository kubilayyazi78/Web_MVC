@using Web_Baslangic.Models
@model List<Category>
@{
    ViewBag.Title = "Kategoriler";
}
@using (Html.BeginForm("Add", "Kategori", FormMethod.Post, new { @class = "form-inline" }))
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @Html.TextBox("CategoryName", "", new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.TextBox("Description", "", new { @class = "form-control" })
            </div>
            <input type="submit" value="Kategori Ekle" class="btn btn-info" />
        </div>
    </div>
}
<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Decription</th>
            <th>Product Count</th>
            <th>Detail</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var current = Model[i];
            <tr>
                <th>@(i + 1)</th>
                <td>@current.CategoryName</td>
                <td>@current.Description</td>
                <td>@current.Products.Count</td>
                <td>
                    <a href="@Url.Action("Detail","Kategori",new { id=current.CategoryID})" class="btn btn-success">
                        Detail
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Delete","Kategori",new { id=current.CategoryID})" class="btn btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>





